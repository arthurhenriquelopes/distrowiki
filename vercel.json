{
  "version": 2,
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "app.py"
    },
    {
      "src": "/logos/(.*)",
      "dest": "public/logos/$1"
    },
    {
      "src": "/.*",
      "dest": "dist/index.html"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "USE_REDIS_CACHE": "false"
  },
  "crons": [
    {
      "path": "/api/distros/refresh",
      "schedule": "0 3 * * *"
    }
  ]
}

{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.html"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "USE_REDIS_CACHE": "false"
  },
  "crons": [
    {
      "path": "/api/distros/refresh",
      "schedule": "0 3 * * *"
    }
  ]
}
